                  '<a href="" class="user">'+
                    data[i].titulo+
                  '</a>'+
                '</div>'+
                '<div class="post">'+
                  '<div class="overlay"><span></span></div>'+
                  '<img src="http://ec2-52-67-144-118.sa-east-1.compute.amazonaws.com:8080/imagens/' + data[i].url_imagem + '" />'+
                '</div>'+
                '<div class="footer">'+
                  '<div class="react">'+
                    '<a href="#" role="button"><span class="love"></span></a>'+
                    '<a href="#" role="button"><span class="comment"></span></a>'+
                  '</div>'+
                  
                  '<div id="comentarios_' + data[i]._id + '" class="caption">'+
                    '<a href="#">{{user.username}}</a>'+
                    '<span>'+ 
                      'TROCAR'+
                    '</span>'+
                  '</div>'+
                  
                  '<div class="comment-section">'+
                    '<input id="postagem_' + data[i]._id + '" class="form-control input_comentario" type="text" placeholder="Adicione um Comentário...">'+
                  '</div>'+
                '</div>'+

                '<div class="comentarios" id="comentarios_' + data[i]._id + '"></div>'+
                '<div class="comentar">'+
                  '<button class="btn btn-default btn_postagem" value="' + data[i]._id + '" type="button">Comentar</button>'+
                '</div>'+



              '</div>'
              
            );
            
            if(data[i].comentarios != undefined){
              var comentarios = data[i].comentarios;

              for(j = 0; j < comentarios.length; j++){
                $('#comentarios_' + data[i]._id).append(
                  '<div class="txt_comentario">'+
                    '<a href="#">{{user.username}}</a>'+
                    '<span>'+ comentarios[j].comentario+ '</span>'+
                  '</div>'
                );
              }
            }

          }

          $('.btn_postagem').click(function(){
            var id = this.value;
            var id_input_comentario = 'postagem_' + id;
            var comentario = $('#'+id_input_comentario).val();
            var xhr = new XMLHttpRequest();
            xhr.open('PUT', 'http://ec2-52-67-144-118.sa-east-1.compute.amazonaws.com:8080/api/' + id);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onload = function(){
              if(xhr.status === 200){
                document.location.reload(true);
              }
            };
            xhr.send(JSON.stringify({ comentario : comentario }));
          });

        }
      }
      xhr.send();
    }

    loadPosts();

    $('.btn_incluir').click(function(){
      $('#container_timeline').hide();
      $('#container_form').show();
    });

    $('.buttonVet').click(function(){ 
