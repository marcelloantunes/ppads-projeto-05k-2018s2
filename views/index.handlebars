<script>
  
  $(document).ready(function(){
  function loadPosts(){
  var xhr = new XMLHttpRequest();
  xhr.open("GET", "http://ec2-52-67-144-118.sa-east-1.compute.amazonaws.com:8080/api");

    xhr.onload = function(){
